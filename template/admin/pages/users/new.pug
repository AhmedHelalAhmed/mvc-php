extends ../../layout.pug

block title
  title Add new User

block styles
  link(href=adminCss + 'users/new.css', rel='stylesheet')
  link(href=cssLibs + 'bootstrap-datepicker.min.css', rel='stylesheet')

block scripts
  script(src=classes + 'Validator.js')
  script(src=adminJs + 'users/new.js')
  script(src=jsLibs + 'bootstrap-datepicker.min.js')

block view
  form(action=host + '/admin/users/add', method='post', autocomplete='off')
    .card
      .card-header: strong Add new user
      .card-body
        .row
          .col-md-6
            .form-group
              label(for='firstname') First name
              input.form-control#fname(type='text', name='fname', placeholder='Enter your first name')
            .form-group
              label(for='lastname') Last name
              input.form-control#lname(type='text', name='lname', placeholder='Enter your last name')
            .form-group
              label(for='username') Username
              input.form-control#username(type='text', name='username', placeholder='Enter username')
            .form-group
              label(for='email') Email
              input.form-control#email(type='text', name='email', placeholder='Enter your email')
            .form-group
              label(for='gender') Gender
              select.form-control#gender(name='gender')
                option()
                option(value='male') Male
                option(value='female') Female
            .form-group
              label(for='birthday') Birthday
              input.form-control.date#birthday(type='text', name='birthday', placeholder='Enter your birthday', autofilee)
          .col-sm-6
            .form-group
              label(for='country') Country
              select.form-control#country(name='country')
                option(value='')
                each country in countries
                  option(value=country)= country
            .form-group
              label(for='state') State
              input.form-control#state(type='text', name='state', placeholder='State name')
            .form-group
              label(for='postal-code') Postal Code
              input.form-control#postal-code#zip(type='number', name='zip', placeholder='Postal Code')
            .form-group
              label(for='city') City
              input.form-control#city(type='text', name='city', placeholder='City name')
            .form-group
              label(for='street') Street
              input.form-control#street(type='text', name='street', placeholder='Street name')
            .form-group
              label(for='hause_number') Hause Number
              input.form-control#postal-code#house_number(type='number', name='house_number', placeholder='Hause Number')
            .form-group
              label(for='additional') Additional
              textarea.form-control#additional(name='additional', placeholder='More details', rows='5')
      .card-footer
        button.btn.btn-sm.btn-primary(type='submit') Add
