//- imgs folder
- var imgs        = _public + 'imgs'    + ds
- var logos       = imgs    + 'logos'   + ds
- var adminImgs   = imgs    + 'admin'   + ds
//- uploads folders
- var uploads     = _public + 'uploads' + ds
- var usersImgs   = uploads + 'images'  + ds + 'users' + ds
//- css folder
- var css         = _public + 'css'     + ds
- var cssLibs     = css     + 'libs'    + ds
- var adminCss    = css     + 'admin'   + ds
//- js folder
- var js          = _public + 'js'      + ds
- var jsLibs      = js      + 'libs'    + ds
- var adminJs     = js      + 'admin'   + ds + 'pages' + ds
block varibles
doctype html
html(lang='en')
  head
    include partials/head.pug
    include partials/styles.pug
  body.app.header-fixed.sidebar-fixed.aside-menu-fixed.sidebar-lg-show
    if !loginPage
      include partials/header.pug
      .app-body
        include partials/sidebar.pug
        main.main
          include partials/breadcrumb.pug
          .container-fluid
            block view
        include partials/aside.pug
      include partials/footer.pug
    else
      .container-fluid
        block view
    include partials/scripts.pug
